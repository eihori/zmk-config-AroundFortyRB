#define ZMK_POINTING_DEFAULT_SCRL_VAL 50
#define MOUSE 6

#include <behaviors/rgbled_widget.dtsi>  // needed to use the behaviors
#include <behaviors.dtsi>
#include <dt-bindings/zmk/bt.h>
#include <dt-bindings/zmk/keys.h>
#include <dt-bindings/zmk/pointing.h>

&mt {
    flavor = "balanced";
    quick-tap-ms = <0>;
    tapping-term-ms = <250>;
};

&lt {
    tapping-term-ms = <200>;
    flavor = "balanced";
};

/ {
    combos {
        compatible = "zmk,combos";

        cb-mo-layer3 {
            bindings = <&mo 3>;
            key-positions = <31 35>;
            layers = <0>;
        };
    };

    macros {
        to_layer_0: to_layer_0 {
            compatible = "zmk,behavior-macro-one-param";
            #binding-cells = <1>;
            bindings = <&to 0 &macro_param_1to1 &kp MACRO_PLACEHOLDER>;
            label = "TO_LAYER_0";
        };

        eisu_hold: eisu_hold {
            compatible = "zmk,behavior-macro";
            #binding-cells = <0>;
            wait-ms = <0>;
            tap-ms = <20>;
            bindings =
                <&macro_tap>,
                <&kp LANG2>,
                <&macro_pause_for_release>,
                <&macro_tap>,
                <&kp LANG1>;
        };

        eisu_layer1_hold: eisu_layer1_hold {
            compatible = "zmk,behavior-macro";
            #binding-cells = <0>;
            wait-ms = <0>;
            tap-ms = <20>;
            bindings =
                <&macro_tap>,
                <&kp LANG2>,
                <&macro_press>,
                <&mo 2>,
                <&macro_pause_for_release>,
                <&macro_release>,
                <&mo 2>,
                <&macro_tap>,
                <&kp LANG1>;
        };
    };

    behaviors {
        lt_to_layer_0: lt_to_layer_0 {
            compatible = "zmk,behavior-hold-tap";
            label = "LAYER_TAP_TO_0";
            bindings = <&mo>, <&to_layer_0>;

            #binding-cells = <2>;
            tapping-term-ms = <200>;
        };

        scrl_ud: scrl_ud {
            compatible = "zmk,behavior-sensor-rotate";
            #sensor-binding-cells = <0>;
            bindings = <&msc SCRL_UP>, <&msc SCRL_DOWN>;

            tap-ms = <20>;
        };

        scrl_ud_inv: scrl_ud_inv {
            compatible = "zmk,behavior-sensor-rotate";
            #sensor-binding-cells = <0>;
            bindings = <&msc SCRL_DOWN>, <&msc SCRL_UP>;

            tap-ms = <20>;
        };

        /* 垂直方向の動きを ↑ / ↓ にする */

        arrows_ud: arrows_ud {
            compatible = "zmk,behavior-sensor-rotate";
            label = "ARROWS_UD";
            #sensor-binding-cells = <0>;

            // 好みで調整（今の scrl_ud_inv と合わせて OK）

            tap-ms = <20>;

            // 正方向 / 負方向

            bindings = <&kp UP_ARROW>, <&kp DOWN_ARROW>;
        };

        /* 水平方向の動きを ← / → にする（使うなら）*/

        arrows_lr: arrows_lr {
            compatible = "zmk,behavior-sensor-rotate";
            label = "ARROWS_LR";
            #sensor-binding-cells = <0>;
            tap-ms = <20>;
            bindings = <&kp RIGHT_ARROW>, <&kp LEFT_ARROW>;
        };

        mh_mouse_hold_tap_key: mh_mouse_hold_tap_key {
            compatible = "zmk,behavior-hold-tap";
            label = "MH_MOUSE_HOLD_TAP_KEY";
            #binding-cells = <2>;          // 1: マウスボタン, 2: タップキー
            flavor = "balanced";
            tapping-term-ms = <200>;
            quick-tap-ms = <0>;
            bindings = <&mkp>, <&kp>;
        };

        hl_mo_tap_key: hl_mo_tap_key {
            compatible = "zmk,behavior-hold-tap";
            label = "HL_MO_TAP_KEY";

            // 1つ目: レイヤー番号（&mo 用）
            // 2つ目: キーコード（&kp 用）

            #binding-cells = <2>;

            // お好みで調整（さっきの hm_* と同じ設定でよいと思います）

            flavor = "balanced";        // or "tap-preferred"
            tapping-term-ms = <200>;
            quick-tap-ms = <0>;

            // hold 側: &mo, tap 側: &kp

            bindings = <&mo>, <&kp>;
        };
    };

    keymap {
        compatible = "zmk,keymap";

        Mac-Default_Layer {
            bindings = <
&kp Q               &kp W         &kp E              &kp R  &kp T                  &kp Y      &kp U        &kp I      &kp O       &kp P
&mt LEFT_CONTROL A  &kp S         &kp D              &kp F  &kp G                  &kp H      &kp J        &kp K      &kp L       &kp BACKSPACE
&mt LEFT_SHIFT Z    &kp X         &kp C              &kp V  &kp B       &none      &kp N      &kp M        &kp COMMA  &kp DOT     &mt RIGHT_SHIFT ENTER
&kp LEFT_GUI        &kp LEFT_ALT  &eisu_layer1_hold  &mo 2  &eisu_hold  &kp MINUS  &kp LANG1  &kp AT_SIGN  &kp SPACE  &lt 6 EXCL  &kp QUESTION
            >;
        };

        Symbol_Layer {
            bindings = <
&trans     &trans     &trans    &trans      &kp CARET              &kp EQUAL  &kp COLON      &kp SEMICOLON  &kp LEFT_PARENTHESIS  &kp RIGHT_PARENTHESIS
&kp GRAVE  &kp TILDE  &kp HASH  &kp DOLLAR  &kp BACKSLASH          &kp PLUS   &kp MINUS      &kp UNDER      &kp LEFT_BRACKET      &kp RIGHT_BRACKET
&trans     &trans     &trans    &trans      &trans         &trans  &kp ASTRK  &kp SLASH      &kp PERCENT    &kp LESS_THAN         &kp GREATER_THAN
&trans     &trans     &trans    &trans      &trans         &trans  &trans     &kp AMPERSAND  &trans         &kp SINGLE_QUOTE      &kp DOUBLE_QUOTES
            >;
        };

        Mac-Common_Layer {
            bindings = <
&trans                &trans         &trans                &trans     &trans              &trans  &trans          &kp UP_ARROW    &trans           &trans
&kp TAB               &kp LG(LS(S))  &kp LG(LS(NUMBER_4))  &mo 5      &kp ESCAPE          &trans  &kp LEFT_ARROW  &kp DOWN_ARROW  &kp RIGHT_ARROW  &trans
&mt LEFT_SHIFT LG(Z)  &kp LG(X)      &kp LG(C)             &kp LG(V)  &trans      &trans  &trans  &trans          &trans          &trans           &trans
&mo 4                 &trans         &trans                &trans     &trans      &trans  &trans  &trans          &trans          &trans           &trans
            >;
        };

        Num_Layer {
            bindings = <
&trans  &kp F1   &kp F2  &kp F3  &trans          &kp PLUS      &kp NUMBER_1  &kp NUMBER_2  &kp NUMBER_3  &trans
&trans  &kp F4   &kp F5  &kp F6  &trans          &kp MINUS     &kp NUMBER_4  &kp NUMBER_5  &kp NUMBER_6  &trans
&trans  &kp F7   &kp F8  &kp F9  &trans  &trans  &kp ASTERISK  &kp NUMBER_7  &kp NUMBER_8  &kp NUMBER_9  &trans
&trans  &kp F10  &trans  &trans  &trans  &trans  &kp SLASH     &trans        &trans        &kp NUMBER_0  &trans
            >;
        };

        Auto_Mouse_Layer {
            bindings = <
&trans  &trans  &trans  &trans  &trans          &trans  &trans    &mo 5     &trans  &trans
&trans  &trans  &trans  &mo 5   &trans          &trans  &mkp MB1  &mkp MB2  &trans  &trans
&trans  &trans  &trans  &trans  &trans  &trans  &trans  &trans    &trans    &trans  &trans
&trans  &trans  &trans  &trans  &trans  &trans  &trans  &trans    &trans    &trans  &trans
            >;
        };

        Scroll_Layer {
            bindings = <
&trans  &trans  &trans  &trans  &trans          &trans  &trans    &trans    &trans  &trans
&trans  &trans  &trans  &trans  &trans          &trans  &mkp MB1  &mkp MB2  &trans  &trans
&trans  &trans  &trans  &trans  &trans  &trans  &trans  &trans    &trans    &trans  &trans
&trans  &trans  &trans  &trans  &trans  &trans  &trans  &trans    &trans    &trans  &trans
            >;

            sensor-bindings = <&scrl_ud_inv>;
        };

        Setting_Layer {
            bindings = <
&studio_unlock  &trans  &trans  &trans  &trans         &bt BT_SEL 0  &bt BT_SEL 1    &bt BT_SEL 2  &bt BT_SEL 3  &bt BT_SEL 4
&trans          &trans  &trans  &trans  &trans         &trans        &trans          &trans        &trans        &trans
&trans          &trans  &trans  &trans  &trans  &to 0  &ind_bat      &trans          &trans        &trans        &bt BT_CLR
&trans          &trans  &trans  &trans  &trans  &to 0  &bootloader   &studio_unlock  &sys_reset    &trans        &trans
            >;
        };
    };
};
